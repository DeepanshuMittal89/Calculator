<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tviInput"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:textColor="@color/white"
        android:layout_gravity="end"
        android:text=""
        android:textAlignment="textEnd"
        android:textSize="60sp"
        android:paddingTop="70dp"
        android:ellipsize="start"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="end"
        android:ellipsize="start"
        android:paddingVertical="10dp"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/answer"
        android:textSize="80dp"
        android:singleLine="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clear_view"
                style="@style/OperationActionButton1"
                android:onClick="onClear"
                android:textSize="34sp"
                android:text="@string/clear" />

            <Button
                android:id="@+id/divide_view"
                style="@style/OperationActionButton1"
                android:onClick="onOperator"
                android:text="/" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/seven_view"
                android:layout_height="match_parent"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/ActionButtonStyle"
                android:text="7"/>
            <Button
                android:id="@+id/eight_view"
                android:layout_height="match_parent"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/ActionButtonStyle"
                android:text="8"/>
            <Button
                android:id="@+id/nine_view"
                android:layout_height="match_parent"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/ActionButtonStyle"
                android:text="9"/>
            <Button
                android:id="@+id/multiply_view"
                android:layout_height="match_parent"
                android:onClick="onOperator"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/OperationActionButton1"
                android:text="*"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/four"
                android:layout_height="match_parent"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/ActionButtonStyle"
                android:text="4"/>
            <Button
                android:id="@+id/five"
                android:layout_height="match_parent"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/ActionButtonStyle"
                android:text="5"/>
            <Button
                android:id="@+id/six"
                android:layout_height="match_parent"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/ActionButtonStyle"
                android:text="6"/>
            <Button
                android:id="@+id/minus"
                android:layout_height="match_parent"
                android:onClick="onOperator"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/OperationActionButton1"
                android:text="-"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/one"
                android:layout_height="match_parent"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/ActionButtonStyle"
                android:text="1"/>
            <Button
                android:id="@+id/two"
                android:layout_height="match_parent"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/ActionButtonStyle"
                android:text="2"/>
            <Button
                android:id="@+id/three"
                android:layout_height="match_parent"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/ActionButtonStyle"
                android:text="3"/>
            <Button
                android:id="@+id/plus"
                android:layout_height="match_parent"
                android:onClick="onOperator"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/OperationActionButton1"
                android:text="+"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/point"
                android:layout_height="match_parent"
                android:onClick="onDot"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/ActionButtonStyle"
                android:text="."/>
            <Button
                android:id="@+id/zero"
                android:layout_height="match_parent"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/ActionButtonStyle"
                android:text="0"/>
            <Button
                android:id="@+id/delete"
                android:layout_height="match_parent"
                android:onClick="onDEL"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="25dp"
                style="@style/ActionButtonStyle"
                android:text="DEL"/>
            <Button
                android:id="@+id/equal"
                android:layout_height="match_parent"
                android:onClick="onEqual"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/NumberActionButton"
                android:text="="/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>